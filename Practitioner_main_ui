  }

  // Reusable Planner Buttons
  static Widget _buildPlannerButton(
      IconData icon, String text, Color color, Color textColor) {
    return ElevatedButton.icon(
      onPressed: () {},
      style: ElevatedButton.styleFrom(
        elevation: 1,
        backgroundColor: Colors.white,
        foregroundColor: color,
        shape: RoundedRectangleBorder(
          borderRadius: BorderRadius.circular(12),
          side: BorderSide(color: color.withOpacity(0.5)),
        ),
      ),
      icon: Icon(icon, size: 20),
      label: Text(
        text,
        style: GoogleFonts.poppins(fontSize: 13, color: Colors.black),
      ),
    );
  }
}

// Recent Patients Custom Tile
class _RecentPatientTile extends StatelessWidget {
  final String initials;
  final String name;
  final String therapy;

  const _RecentPatientTile(
      {required this.initials, required this.name, required this.therapy});

  @override
  Widget build(BuildContext context) {
    return Row(
      children: [
        CircleAvatar(
          child: Text(initials,
              style: GoogleFonts.poppins(
                  fontSize: 13, fontWeight: FontWeight.bold)),
        ),
        const SizedBox(width: 12),
        Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Text(name,
                style: GoogleFonts.poppins(
                    fontWeight: FontWeight.bold, fontSize: 15)),
            Text(therapy,
                style: GoogleFonts.poppins(color: Colors.black54)),
          ],
        )
      ],
    );
  }
}

import 'package:flutter/material.dart';
import 'package:google_fonts/google_fonts.dart';

void main() {
  runApp(const PractitionerApp());
}

class PractitionerApp extends StatelessWidget {
  const PractitionerApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Practitioner Dashboard',
      theme: ThemeData(
        primarySwatch: Colors.blue,
        scaffoldBackgroundColor: Colors.white,
        textTheme: GoogleFonts.poppinsTextTheme(), // âœ… Apply Poppins globally
      ),
      home: const PractitionerDashboard(),
    );
  }
}

